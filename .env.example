# Set these in Netlify > Site configuration > Environment variables
# For local dev, copy to .env with real values

# Supabase (required)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=
VITE_APP_NAME=Givoro

# Netlify Functions (server-side only, NOT prefixed with VITE_)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE=
GEMINI_API_KEY=

# Amazon Product Advertising API (server-side only)
AMAZON_PA_ACCESS_KEY=
AMAZON_PA_SECRET_KEY=
AMAZON_PARTNER_TAG=
AMAZON_PA_REGION=eu-west-1
AMAZON_PA_HOST=webservices.amazon.co.uk
